.clearfix:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
page{
  background: #f6f6f6;
}
Nhover{
  background: #fff;
}
.border1 {
  position: relative;
 
  border: none; }

.border1:after {
  content: '';
  position: absolute;
  left: 0;
  height: 1rpx;
  bottom: 0rpx;
  background: #bfbfbf;
  width: 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0; }
  .transMark{
    width: 100%;
    height: 100%;
    position: fixed;
    background: #fff;
    z-index: 999;
  }
  .open{
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #ff712b;
    font-size: 30rpx;
    text-align: center;
    color: #fff;
    border-radius: 10rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -30rpx;
    margin-left: -80rpx;
  }
  .open-tip{
    width: 80%;
    line-height: 40rpx;
    margin: 0 auto;
    margin-top: 50%;
    text-align: center;
    font-size: 28rpx;
    color: #ccc;
  }
    .mask{
    width: 100%;
    height: 100%;
    position: fixed;
    background: #000;
    z-index: 999;
    opacity: 0.3;
    filter: opacity(30);
  }
  .userInfo {
  position: fixed;
  z-index: 1000;
  background: #fff;
  width: 600rpx;
  height: 250rpx;
  top: 50%;
  left: 50%;
  margin-top: -150rpx;
  margin-left: -300rpx;
}

.userInfo .tt {
  padding: 20rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -ms-box-sizing: border-box;
  -o-box-sizing: border-box;
  font-size: 32rpx;
  text-align: center;
  color: #999;

  line-height: 60rpx;
}

.userInfo .op {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 80rpx;
  border-top: 1rpx solid #f4f4f4;
}

.userInfo .op view {
  width: 50%;
  float: left;
  text-align: center;
  line-height: 80rpx;
  color: #353535;
}

.userInfo .op view button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-right: 1rpx solid #f4f4f4;
  color: #21b922;
}

.userInfo .op view button::after {
  border: none;
}